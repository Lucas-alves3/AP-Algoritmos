#include <stdio.h>

float calcular_area_circulo(float raio){
    float area = 3.14159 * raio * raio;
    return area;
}

int main() {
    float raio, area;
    
    printf("Digite o valor do raio do circulo: ");
    scanf("%f", &raio);
    
    area = calcular_area_circulo(raio);
    
    printf("A área do circulo de raio %.2f é %.2f\n", raio, area);
    
    return 0;
}
